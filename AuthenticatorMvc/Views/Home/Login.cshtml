@using AuthenticatorApp.Model;
@model LoginViewModel


<form class="row g-3" method="post" asp-area="" asp-controller="Home" asp-action="Login" enctype="multipart/form-data">
    <div class="col-md-6 col-12">
        <div class="form-floating">
            <input asp-for="Email" type="text" class="form-control" placeholder="Email">
            <label for="floatingName">Email</label>
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>


    <div class="col-md-6 col-12">
        <div class="form-floating">
            <input asp-for="Password" type="text" class="form-control" placeholder="Email">
            <label for="floatingName">Password</label>
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

 
    <div class="text-center">
        <button type="submit" class="btn btn-primary  margin-left-10px">ذخیره</button>
        <button type="reset" class="btn btn-secondary  margin-left-10px">بازنشانی</button>
    </div>
</form>

